{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "lib": ["es2017"],
    "outDir": "build",
    "composite": true,
    "rootDir": "src",
    "baseUrl": ".",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/middlewares/*": ["./src/middlewares/*"],
      "@/interfaces/*": ["./src/interfaces/*"],
      "@/utilities/*": ["./src/utilities/*"],
      "@/services/*": ["./src/services/*"],
      "@/models/*": ["./src/models/*"]
    }
  }
}