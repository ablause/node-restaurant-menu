{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "lib": ["es2017"],
    "outDir": "build",
    "composite": true,
    "rootDir": "src",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/middlewares/*": ["./src/middlewares/*"],
      "@/utilities": ["./src/utilities/*"],
      "@/models": ["./src/models/*"]
    }
  }
}